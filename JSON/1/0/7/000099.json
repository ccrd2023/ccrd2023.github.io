u8868\uff0c\u8981\u6c42\u4e00\u81f4\uff0c\u76ee\u6807\u96c6\u4e2d\uff0c\u8fd8\u51c6\u5907\u4e86\u4e0d\u5c11\u53ef\u8fa9\u7684\u6750\u6599", "type": "paragraph"}, {"text": "\u7b2c\u4e09\u6b65\uff0c\u9aa8\u5e72\u717d\u52a8\uff0c\u7fa4\u4f17\u6fc0\u52a8\uff0c\u5a01\u80c1\u9886\u5bfc", "type": "paragraph"}, {"text": "\u7b2c\u56db\u6b65\uff0c\u5c31\u662f\u4ee5\u7f62\u5de5\uff0c\u6020\u5de5\uff0c\u5305\u56f4\u5e72\u90e8\u7b49\u6765\u89e3\u51b3\u95ee\u9898", "type": "paragraph"}, {"text": "\u4ece\u8fd9\u4e9b\u95f9\u4e8b\u5382\u7684\u8d77\u56e0\u770b\uff0c\u5927\u81f4\u6709\u8fd9\u6837\u51e0\u4e2a\u5171\u540c\u70b9\uff1a", "type": "paragraph"}, {"text": "1\u3001\u5e72\u90e8\u548c\u7fa4\u4f17\u7f3a\u5c11\u601d\u60f3\u611f\u60c5\uff0c\u5173\u7cfb\u4e0d\u6b63\u5e38", "type": "paragraph"}, {"text": "2\u3001\u95ee\u9898\u90fd\u76f4\u63a5\u5173\u7cfb\u5230\u804c\u5de5\u7684\u5207\u8eab\u5229\u76ca\uff0c\u4e5f\u662f\u57fa\u5c42\u5e72\u90e8\u611f\u89c9\u5934\u75db\u7684\uff0c\u4e0d\u6562\u53bb\u89e3\u91ca\uff0c\u597d\u50cf\u5f88\u7406\u4e8f\uff0c\u62ac\u4e0d\u8d77\u5934\u3002", "type": "paragraph"}, {"text": "3\u3001\u5de5\u4f5c\u4e0a\u5b58\u5728\u7684\u95ee\u9898\u548c\u7f3a\u70b9\u7684\u79ef\u7d2f\u4e5f\u662f\u91cd\u8981\u7684\u56e0\u7d20\u4e4b\u4e00", "type": "paragraph"}, {"text": "4\u3001\u5c11\u6570\u95f9\u4e8b\u9aa8\u5e72\u5206\u5b50\u7684\u717d\u52a8\uff0c\u5bf9\u4e8b\u60c5\u95f9\u5927\u662f\u5f88\u6709\u5173\u7cfb\u7684", "type": "paragraph"}, {"text": "5\u3001\u5916\u6765\u7684\u5f71\u54cd", "type": "paragraph"}, {"text": "6\u3001\u8d44\u672c\u5bb6\u7684\u6311\u62e8\uff0c\u4ece\u4e2d\u62c9\u62e2\u7fa4\u4f17\uff0c\u4f7f\u95ee\u9898\u8d8b\u5411\u590d\u6742\u5316", "type": "paragraph"}, {"text": "7\u3001\u5f53\u95ee\u9898\u7206\u53d1\u8d77\u6765\u5904\u7406\u65b9\u6cd5\u548c\u8bb2\u8bdd\u4e0d\u614e\u91cd\uff0c\u4e5f\u4f1a\u4f7f\u7fa4\u4f17\u4e0d\u6ee1\uff0c\u4f7f\u4e8b\u60c5\u95f9\u5927", "type": "paragraph"}, {"text": "\u4ece\u8fd9\u4e9b\u5382\u7684\u5904\u7406\u4e2d\u6211\u4eec\u611f\u89c9\u5fc5\u987b\u7d27\u7d27\u7684\u638c\u63e1\u4ee5\u4e0b\u51e0\u4e2a\u95ee\u9898\uff1a", "type": "paragraph"}, {"text": "1\u3001\u5fc5\u987b\u4ece\u5e2e\u52a9\u57fa\u5c42\u5e72\u90e8\u4e0b\u624b\u548c\u7fa4\u4f17\u5efa\u7acb\u611f\u60c5", "type": "paragraph"}, {"text": "2\u3001\u5fc5\u987b\u91c7\u53d6\u201c\u548c\u98ce\u7ec6\u96e8\u201d\u7684\u65b9\u6cd5\uff0c\u7528\u8010\u5fc3\u7684\u6001\u5ea6\u6559\u80b2\u7fa4\u4f17", "type": "paragraph"}, {"text": "3\u3001\u5de5\u4f1a\u5e72\u90e8\u5728\u95f9\u5e02\u65f6\u4e00\u65b9\u9762\u8981\u575a\u6301\u539f\u5219\uff0c\u53e6\u4e00\u65b9\u9762\u8981\u5173\u5fc3\u7fa4\u4f17\uff0c\u8fd9\u4e24\u8005\u662f\u4e0d\u53ef\u5206\u5272\u7684\u3002", "type": "paragraph"}, {"text": "4\u3001\u5584\u4e8e\u505a\u597d\u5173\u952e\u4eba\u7269\u7684\u5de5\u4f5c\uff0c\u901a\u8fc7\u5173\u952e\u4eba\u7269\u7684\u7a81\u7834\uff0c\u8fd9\u4e0d\u4ec5\u80fd\u53d8\u963b\u529b\u4e3a\u52a9\u529b\uff0c\u800c\u4e14\u5bf9\u95ee\u9898\u7684\u89e3\u51b3\u5f88\u6709\u597d\u5904\u3002", "type": "paragraph"}, {"text": "\u4ece\u95f9\u4e8b\u5382\u4e2d\u66b4\u9732\u4e86\u533a\u5de5\u59d4\u5de5\u4f5c\u4e0a\u7684\u54ea\u4e9b\u95ee\u9898\u5462\uff1f", "type": "paragraph"}, {"text": "1\u3001\u9886\u5bfc\u4e0d\u5f3a\uff0c\u4f5c\u98ce\u4e0d\u6df1\u5165\uff0c\u4e0d\u662f\u771f\u6b63\u5e2e\u52a9\u57fa\u5c42\u5f00\u5c55\u5de5\u4f5c\uff0c \u800c\u662f\u201c\u770b\u5f97\u591a\uff0c\u5e2e\u5f97\u5c11\u201d\uff0c\u5bf9\u7fa4\u4f17\u75be\u82e6\u7f3a\u4e4f\u540c\u60c5\uff0c\u4e0d\u61c2\u5f97\u7fa4\u4f17\u7684\u6b22\u4e50\u548c\u5fe7\u6101\u3002", "type": "paragraph"}, {"text": "2\u3001\u5de5\u4f1a\u7ec4\u7ec7\u7f3a\u5c11\u6b63\u5e38\u7684\u6c11\u4e3b\u751f\u6d3b\uff0c\u5de5\u4f1a\u6240\u505a\u7684\u5de5\u4f5c\u4e0d\u5411\u7fa4\u4f17\u62a5\u544a\uff0c\u7fa4\u4f17\u4e5f\u4e0d\u4e86\u89e3\u5de5\u4f1a\u7a76\u7adf\u505a\u70b9\u5565\uff1b\u5de5\u4eba\u6709\u610f\u89c1\u6ca1\u5730\u65b9\u53bb\u63d0", "type": "paragraph"}, {"text": "3\u3001\u5de5\u4f1a\u7ec4\u7ec7\u4f5c\u7528\u6ca1\u6709\u5f88\u597d\u7684\u53d1\u6325\uff0c\u7279\u522b\u662f\u4e2d\u5fc3\u5382\u9886\u5bfc\u536b\u661f\u5382\u7684\u5de5\u4f5c\u4e0a\u6709\u8bb8\u591a\u95ee\u9898\uff0c\u6ca1\u6709\u52a0\u4ee5\u89e3\u51b3\u3002", "type": "paragraph"}, {"text": "4\u3001\u5728\u7fa4\u4f17\u751f\u5382\u5de5\u4f5c\u4e2d\u8fd8\u5b58\u5728\u4e0d\u5c11\u95ee\u9898\uff0c\u5177\u4f53\u53cd\u6620\uff08\u6863\u6848\u4e2d\u7565\uff09", "type": "paragraph"}, {"text": "\u4ee5\u4e0a\u8fd9\u4e9b\u95ee\u9898\u7684\u66b4\u9732\u90fd\u662f\u5341\u5206\u503c\u5f97\u6211\u4eec\u6df1\u601d\u7684\uff0c\u4e5f\u7ed9\u4e88\u6211\u4eec\u4e00\u6b21\u6df1\u523b\u7684\u6559\u80b2\uff0c\u8fd9\u5c31\u662f\uff1a\u8981\u6211\u4eec\u6811\u7acb\u548c\u7fa4\u4f17\u6253\u6210\u4e00\u7247\u4e0e\u7fa4\u4f17\u540c\u7518\u5171\u82e6\u7684\u4f5c\u98ce\uff1b\u8981\u6211\u4eec\u5207\u5b9e\u7684\u5e2e\u52a9\u57fa\u5c42\u8fdb\u884c\u5de5\u4f5c\uff1b\u8981\u6211\u4eec\u514b\u670d\u5de5\u4f5c\u4e0a\u7684\u5b98\u50da\u4e3b\u4e49\u548c\u4e3b\u89c2\u4e3b\u4e49\u3002", "type": "paragraph"}, {"text": "\u00a0\u4e0a\u6d77\u5e02\u8f7b\u5de5\u4e1a\u5de5\u4f1a\u9091\u5e99\u533a\u5de5\u4f5c\u59d4\u5458\u4f1a1957\u5e747\u67085\u65e5", "type": "paragraph"}, {"text": "\u6765\u6e90\uff1a\u4e0a\u6d77\u5e02\u6863\u6848\u9986\uff0cC1-2-2407\uff0c\u7b2c135-144\u9875\u3002", "type": "paragraph"}]}